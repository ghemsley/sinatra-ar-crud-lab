<div>
  <h1>Create a new article</h1>
  <form action="/articles" method="POST">
  <div>
      <label>
        <p>Title</p>
        <input type="text" id="title" name="article[title]" />
      </label>
      <label>
        <p>Content</p>
        <input type="text" id="content" name="article[content]" style='width: 100%; height: 10em;'/>
      </label>
    </div>
    <input type="submit" value="Submit" style='margin-top: 1em;'/>
  </form>
</div>
