<div>
  <h1><%= @article.title %></h1>
  <p><%= @article.content %></p>
  <form action='/articles/<%= @article.id %>/edit' method='GET'>
    <button>
      Edit
    </button>
  </form>
  <form action='/articles/<%= @article.id %>' method='POST'>
    <input type='hidden' id='hidden' name='_method' value='DELETE'>
    <input type='submit' id='delete' value='Delete'>
  </form>
</div>
